function vi {
    test -d ./.venv/bin && . .venv/bin/activate
    nvim "$@"
}
function copyshot {
    cp "$HOME/Pictures/shots/last.png" .
    test -n "$1" || {
        ll last.png
        return
    }
    local pic="$1"
    [[ "$pic" != *.png ]] && pic="$pic.png"
    mkdir -p "$(dirname "$pic")"
    mv "last.png" "$pic"
    ll "$pic"
}

function colors() {
    for fgbg in 38 48; do         # Foreground/Background
        for color in {0..255}; do # Colors (0-255, not 0-256)
            # Display the color
            printf "\e[${fgbg};5;${color}m %3d\t\e[0m" "$color"
            # Display 10 colors per line
            if [ $(((color + 1) % 10)) -eq 0 ]; then
                echo # New line
            fi
        done
        echo # New line
    done
}
function killname() {
    command kill -KILL $(pidof "$@")
}

function r {
    cd ~/repos
    cd "$(fd -d 4 --type directory --hidden --exclude arch .git$ | sed -e "s:/.git::g" | fzf --exact -1 -q "$*")"
    pwd
}

function o() {
    local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
    yazi "$@" --cwd-file="$tmp"
    if cwd="$(command cat -- "$tmp")" && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]; then
        builtin cd -- "$cwd"
    fi
    rm -f -- "$tmp"
}
source "$HOME/.cargo/env"

function premail {
    cd "$HOME/uv/imap-easybox"
    ./.venv/bin/python3 ./premail.py "$@"
}

# Serve current directory on specified port (default 8000)
function serve {
    local port=${1:-8000}
    echo "Serving current directory at http://localhost:$port"
    python3 -m http.server $port
}
